{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "baseUrl": "./",
        "paths": {
            "$components/*": ["src/components/*"],
            "$data/*": ["src/data/*"],
            "$layouts/*": ["src/layouts/*"],
            "$lib/*": ["src/lib/*"],
            "$styles/*": ["src/styles/*"],
            "$pages/*": ["src/pages/*"]
        }
    }
}
